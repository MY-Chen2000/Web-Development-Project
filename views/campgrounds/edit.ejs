<% layout('layout/boilerplate') %>
<div class="row">
    <h1 class="text-center">
        Edit Movie
    </h1>
    <div class="col-6 offset-3">
        <form action="/campground/<%=camp._id%>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class='mb-3'>
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id= "title" name= "campground[title]" value="<%=camp.title%>" required>
            </div>
            <div class='mb-3'>
                <label class="form-label" for="location">Country</label>
                <input class="form-control" type="text" id= "location" name= "campground[location]" value="<%=camp.location%>" required>
            </div>
            <div class="input-group mb-3">
                <label class="form-label" for="price">Box Office(million)</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" name= "campground[price]" value="<%=camp.price%>" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                </div>
            </div>
            <div class='mb-3'>
                <label class="form-label" for="image">Add more image(s)</label>
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                </div>
                <!-- <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id= "image" name= "campground[image]" value="<%=camp.image%>" required> -->
            </div>
            <div class='mb-3'>
                <label class="form-label" for="descrip">Description</label>
                <textarea class="form-control" type="text" id= "descrip" name= "campground[description]" required><%=camp.description%></textarea>
            </div>
            <div class="mb-3">
                <% camp.image.forEach(function(img, i) {  %>
                <img src="<%=img.thumbnail %>" class="img-thumbnail" style="width:200px;height:200px;" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    <label for="image-<%=i%>">Delete</label>
                </div>
                
                <% })%>
            </div>
            <div class="mb-3">
                <button class='btn btn-info'>edit</button>
                <a class="card-link btn btn-primary text-light" href="/campground/<%= camp._id%>">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"></path>
                      </svg>
                      Back
                </a>
            </div>
            
            
        </form>
        
    </div>
</div>

